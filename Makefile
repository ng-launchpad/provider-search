# --------------------------------------------------------------------------
# Start all containers, install application if necessary
# --------------------------------------------------------------------------
up:
	@./scripts/up.sh

# --------------------------------------------------------------------------
# Stop all containers
# --------------------------------------------------------------------------
down:
	@./scripts/down.sh

# --------------------------------------------------------------------------
# Migrate database, build and compile frontend
# --------------------------------------------------------------------------
build:
	@./scripts/build.sh

# --------------------------------------------------------------------------
# Builds Docker containers
# --------------------------------------------------------------------------
build-containers:
	@./scripts/build-containers.sh

# --------------------------------------------------------------------------
# Builds the fresh project
# --------------------------------------------------------------------------
fresh:
	@./scripts/fresh.sh

# --------------------------------------------------------------------------
# Watches the app and tests sources for changes and reruns PHPUnit tests
# --------------------------------------------------------------------------
watchback:
	@./scripts/watchback.sh

# --------------------------------------------------------------------------
# Watches the project frontend for changes and rebuilds it
# --------------------------------------------------------------------------
watchfront:
	@./scripts/watchfront.sh

# --------------------------------------------------------------------------
# Run github workflows locally
# --------------------------------------------------------------------------
act:
	@./scripts/act.sh

# --------------------------------------------------------------------------
# Generate IDE Helper
# --------------------------------------------------------------------------
idehelper:
	@./scripts/idehelper.sh
